---
 Modules/Bar/Widgets/Battery.qml | 2 +-
 Modules/Bar/Widgets/Volume.qml  | 1 +
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/Modules/Bar/Widgets/Battery.qml b/Modules/Bar/Widgets/Battery.qml
index ab346926..50687e21 100644
--- a/Modules/Bar/Widgets/Battery.qml
+++ b/Modules/Bar/Widgets/Battery.qml
@@ -210,7 +210,7 @@ Item {
     forceOpen: root.isReady && root.displayMode === "icon-always"
     forceClose: root.displayMode === "icon-only" || !root.isReady
     customBackgroundColor: root.isCharging ? Color.mPrimary : ((root.isLowBattery || root.isCriticalBattery) ? Color.mError : "transparent")
-    customTextIconColor: root.isCharging ? Color.mOnPrimary : ((root.isLowBattery || root.isCriticalBattery) ? Color.mOnError : "transparent")
+    customTextIconColor: root.isCharging ? Color.mOnPrimary : ((root.isLowBattery || root.isCriticalBattery) ? Color.mOnError : Color.mPrimary)
     tooltipText: root.tooltipText
 
     onClicked: openBatteryPanel()
diff --git a/Modules/Bar/Widgets/Volume.qml b/Modules/Bar/Widgets/Volume.qml
index 9ecfd919..8d93e3dc 100644
--- a/Modules/Bar/Widgets/Volume.qml
+++ b/Modules/Bar/Widgets/Volume.qml
@@ -118,6 +118,7 @@ Item {
       const displayVolume = Math.min(maxVolume, AudioService.volume);
       return Math.round(displayVolume * 100);
     }
+    customTextIconColor: AudioService.muted  ? Color.mError : Color.mPrimary
     suffix: "%"
     forceOpen: displayMode === "alwaysShow"
     forceClose: displayMode === "alwaysHide"
